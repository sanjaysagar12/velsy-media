<section class="team-section" id="team">
  <div class="container">
    <div class="section-title">
      <h2>Meet Our Team</h2>
      <p>
        Meet the visionary experts powering our virtual collective with
        unparalleled skills and innovation
      </p>
    </div>

    <div class="team-grid">
      {
        teamMembers.map((member) => (
          <div class="profile-card">
            <div class="card-header">
              <img src={member.image} alt={member.name} class="profile-pic" />
            </div>
            <div class="card-body">
              <h3 class="profile-name">{member.name}</h3>
              <div class="profile-title">{member.title}</div>
              <p class="profile-bio">{member.bio}</p>

              <div class="profile-services">
                {member.services.map((service) => (
                  <span class="service-tag">{service}</span>
                ))}
              </div>

              <div class="card-footer">
                <a
                  href={member.portfolio}
                  class="profile-link"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  View Portfolio <i class="fas fa-arrow-right" />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Team Section */
  .team-section {
    padding: 150px 0 100px;
    position: relative;
  }

  .section-title {
    text-align: center;
    margin-bottom: 80px;
  }

  .section-title h2 {
    font-family: "Montserrat", sans-serif;
    font-size: 3.5rem;
    font-weight: 750;
    margin-bottom: 20px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section-title p {
    color: var(--text-light);
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.2rem;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 40px;
  }

  /* Profile Card */
  .profile-card {
    background: var(--glass);
    border-radius: 25px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    position: relative;
    z-index: 1;
    border: 1px solid rgba(255, 107, 53, 0.1);
    backdrop-filter: blur(10px);
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .profile-card:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: var(--shadow-hover);
    border: 1px solid rgba(255, 107, 53, 0.3);
  }

  .card-header {
    position: relative;
    height: 200px;
    background: linear-gradient(
      135deg,
      rgba(255, 107, 53, 0.1),
      rgba(247, 147, 30, 0.1)
    );
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .profile-pic {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    border: 5px solid rgba(255, 107, 53, 0.2);
    object-fit: cover;
    position: absolute;
    bottom: -70px;
    box-shadow: var(--shadow);
    transition: var(--transition);
  }

  .profile-card:hover .profile-pic {
    transform: scale(1.05) rotate(5deg);
    border-color: rgba(255, 107, 53, 0.5);
  }

  .card-body {
    padding: 90px 30px 30px;
    text-align: center;
  }

  .profile-name {
    font-family: "Montserrat", sans-serif;
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 8px;
    letter-spacing: -0.5px;
    color: var(--text-dark);
  }

  .profile-title {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 20px;
    font-size: 1.1rem;
    letter-spacing: 1px;
  }

  .profile-bio {
    color: var(--text-light);
    margin-bottom: 25px;
    font-size: 1rem;
    min-height: 80px;
  }

  .profile-services {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    margin-bottom: 30px;
  }

  .service-tag {
    background: rgba(255, 107, 53, 0.1);
    color: var(--primary);
    padding: 8px 18px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: var(--transition);
    border: 1px solid rgba(255, 107, 53, 0.2);
  }

  .profile-card:hover .service-tag {
    background: rgba(255, 107, 53, 0.2);
    transform: translateY(-3px);
  }

  .card-footer {
    display: flex;
    justify-content: center;
    padding: 0 25px 30px;
  }

  .profile-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: var(--primary);
    font-weight: 600;
    transition: var(--transition);
    font-size: 1.1rem;
  }

  .profile-link:hover {
    color: var(--accent);
    transform: translateX(8px);
  }
</style>
