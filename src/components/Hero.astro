---
// Hero component
---

<section class="hero" id="home">
  <div class="container">
    <div class="hero-content">
      <h1>Where Innovation Meets Expertise</h1>
      <p>
        Velsy Media unites elite professionals in a virtual ecosystem,
        delivering transformative solutions for tomorrow's challenges.
      </p>
      <a href="#team" class="cta-button"
        >Discover Our Team <i class="fas fa-arrow-right"></i></a
      >

      <div class="hero-stats py-3">
        <div class="stat-item" style="--delay: 0s;">
          <div class="stat-value">20+</div>
          <div class="stat-label">Expert Members</div>
        </div>
        <div class="stat-item" style="--delay: 0.2s;">
          <div class="stat-value">15+</div>
          <div class="stat-label">Projects Delivered</div>
        </div>
        <div class="stat-item" style="--delay: 0.4s;">
          <div class="stat-value">97%</div>
          <div class="stat-label">Client Satisfaction</div>
        </div>
      </div>
    </div>
    <div class="hero-image">
      <img
        src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80"
        alt="Velsy Media"
      />
    </div>
  </div>

  <div class="hero-shapes">
    <div class="shape shape-1 floating"></div>
    <div class="shape shape-2 floating" style="animation-delay: 2s;"></div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    max-width: 700px;
    z-index: 2;
    position: relative;
  }

  .hero h1 {
    font-family: "Montserrat", sans-serif;
    font-size: 4.5rem;
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 25px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 5px 15px rgba(255, 107, 53, 0.2);
  }

  .hero p {
    font-size: 1.3rem;
    margin-bottom: 40px;
    color: var(--text-light);
    max-width: 600px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--gradient);
    color: white;
    padding: 18px 40px;
    border-radius: 15px;
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    box-shadow: var(--shadow);
    font-size: 18px;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .cta-button:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: linear-gradient(135deg, var(--accent), var(--primary));
    transition: var(--transition);
    z-index: -1;
  }

  .cta-button:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
  }

  .cta-button:hover:before {
    width: 100%;
  }

  .hero-stats {
    display: flex;
    gap: 40px;
    margin-top: 50px;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-family: "Montserrat", sans-serif;
    font-size: 3.5rem;
    font-weight: 800;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
  }

  .stat-label {
    color: var(--text-light);
    font-size: 1.1rem;
    margin-top: 5px;
  }

  .hero-image {
    position: absolute;
    right: 5%;
    top: 30%;
    transform: translateY(-50%);
    width: 45%;
    max-width: 600px;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow-hover);
    border: 1px solid rgba(255, 107, 53, 0.1);
    z-index: 2;
  }

  .hero-image img {
    width: 100%;
    display: block;
    transition: transform 0.5s ease;
  }

  .hero-image:hover img {
    transform: scale(1.05);
  }

  .hero-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    filter: blur(60px);
  }

  .shape-1 {
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    top: -200px;
    right: 100px;
    opacity: 0.05;
  }

  .shape-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, var(--accent), var(--primary));
    bottom: -100px;
    left: 100px;
    opacity: 0.05;
  }

  /* Modern animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hero-content {
    animation: fadeInUp 1s ease-out;
  }

  .hero-image {
    animation: slideInRight 1s ease-out 0.3s both;
  }

  .stat-item {
    animation: fadeInUp 1s ease-out calc(0.6s + var(--delay, 0s)) both;
  }

  /* Mobile animation adjustments */
  @media (max-width: 992px) {
    .hero-image {
      animation: fadeInUp 1s ease-out 0.4s both;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content,
    .hero-image,
    .stat-item {
      animation: none;
    }
  }

  /* Mobile Responsive Styles */
  @media (max-width: 992px) {
    .hero {
      height: auto;
      min-height: 100vh;
      padding: 120px 0 60px;
      text-align: center;
    }

    .hero .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-content {
      max-width: 100%;
      order: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .hero-image {
      position: relative;
      right: auto;
      top: auto;
      transform: none;
      width: 90%;
      max-width: 500px;
      margin: 40px auto 0;
      order: 2;
    }

    .hero h1 {
      font-size: 3.5rem;
      text-align: center;
    }

    .hero p {
      text-align: center;
      max-width: 100%;
    }

    .hero-stats {
      justify-content: center;
      flex-wrap: wrap;
      gap: 30px;
      /* Keep horizontal layout on tablet */
      flex-direction: row;
    }

    .stat-item {
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 100px 0 40px;
    }

    .hero h1 {
      font-size: 2.8rem;
      margin-bottom: 20px;
    }

    .hero p {
      font-size: 1.1rem;
      margin-bottom: 30px;
    }

    .cta-button {
      padding: 18px 45px;
      font-size: 18px;
      min-height: 56px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 16px;
    }

    .hero-stats {
      /* Keep stats in horizontal line on mobile */
      flex-direction: row;
      justify-content: space-between;
      gap: 20px;
      margin-top: 40px;
      align-items: center;
      width: 100%;
      max-width: 500px;
    }

    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      flex: 1;
      text-align: center;
    }

    .stat-value {
      font-size: 2.5rem;
    }

    .stat-label {
      font-size: 1rem;
      text-align: center;
    }

    .hero-image {
      width: 100%;
      margin: 30px auto 0;
    }

    .hero-image img {
      transition: transform 0.3s ease;
    }

    .hero-image:hover img {
      transform: scale(1.02);
    }

    .shape-1 {
      width: 400px;
      height: 400px;
      top: -100px;
      right: -100px;
    }

    .shape-2 {
      width: 300px;
      height: 300px;
      bottom: -50px;
      left: -100px;
    }

    /* Touch-friendly improvements for mobile */
    .cta-button {
      min-height: 56px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .hero-image img {
      transition: transform 0.3s ease;
    }

    .hero-image:hover img {
      transform: scale(1.02);
    }

    /* Reduce floating animation intensity on mobile */
    .floating {
      animation-duration: 8s;
    }
  }

  @media (max-width: 576px) {
    .hero {
      padding: 80px 0 30px;
    }

    .hero h1 {
      font-size: 2.2rem;
      line-height: 1.1;
      word-break: break-word;
      hyphens: auto;
    }

    .hero p {
      font-size: 1rem;
      margin-bottom: 25px;
      line-height: 1.5;
    }

    .cta-button {
      padding: 20px 50px;
      font-size: 18px;
      min-height: 60px;
      border-radius: 18px;
      font-weight: 700;
    }

    .hero-stats {
      margin-top: 30px;
      gap: 15px;
      /* Maintain horizontal layout even on small screens */
      flex-direction: row;
      justify-content: space-between;
      width: 100%;
      max-width: 400px;
    }

    .stat-item {
      flex: 1;
      text-align: center;
    }

    .stat-value {
      font-size: 2rem;
    }

    .stat-label {
      font-size: 0.85rem;
      line-height: 1.2;
    }

    .hero-image {
      margin: 25px auto 0;
      border-radius: 15px;
    }

    .shape-1 {
      width: 300px;
      height: 300px;
      top: -50px;
      right: -150px;
    }

    .shape-2 {
      width: 250px;
      height: 250px;
      bottom: -25px;
      left: -150px;
    }
  }

  @media (max-width: 390px) {
    .hero {
      padding: 70px 0 20px;
    }

    .hero h1 {
      font-size: 1.8rem;
    }

    .hero p {
      font-size: 0.9rem;
    }

    .cta-button {
      padding: 18px 45px;
      font-size: 17px;
      min-height: 58px;
      border-radius: 16px;
    }

    .hero-stats {
      gap: 10px;
      max-width: 350px;
    }

    .stat-value {
      font-size: 1.8rem;
    }

    .stat-label {
      font-size: 0.75rem;
      line-height: 1.1;
    }

    .hero-image {
      border-radius: 12px;
    }
  }

  /* Extra small screens */
  @media (max-width: 320px) {
    .cta-button {
      padding: 16px 40px;
      font-size: 16px;
      min-height: 56px;
    }

    .hero-stats {
      gap: 8px;
      max-width: 300px;
    }

    .stat-value {
      font-size: 1.6rem;
    }

    .stat-label {
      font-size: 0.7rem;
    }
  }
</style>
